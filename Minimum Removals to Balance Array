

class Solution {
public:
    int minRemoval(vector<int>& nums, int k) {
        int n=nums.size();
        if (n<=1) return 0;
        int i=0,j=0;
        sort(nums.begin(),nums.end());
        int ans=n;
        while (j<n) {
            while ((long long) nums[j]>(long long)k*nums[i]) {
                i++;
            }
            ans = min(ans,n-(j-i+1));
            j++;
        }
        return ans;
    }
};
